<% provide(:title, 'Upload new problem') %>

<div class="row ">
  <div class="col-md-8 offset-md-2" id="login-part">
    <div class="card border-success mb-3 card-form">
    <h2 class="SignUp">NEW PROBLEM</h2>
		<%= form_for(@problem, url: problems_path) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>

		<div class="form-group">
		<%= f.label :name ,class:"label-part"%>
		<%= f.text_field :name ,class:"form-control "%>
		</div>

		<div class="form-group">
		<%= f.label :timelimit, "Time Limit" ,class:"label-part"%>
		<%= f.number_field :timelimit ,class:"form-control "%>
		</div>

		<div class="form-group">
		<%= f.label :memlimit, "Memory Limit" ,class:"label-part"%>
		<%= f.number_field :memlimit ,class:"form-control "%>
		</div>

		<div class="form-group">
		<%= f.label :file_name, "File" ,class:"label-part"%>
		<%= f.file_field :file_name, multiple: true ,class:"form-control "%>
		</div>

		<%= f.submit "Upload", class: "btn btn-success"%>
		<% end %>
    </div>
  </div>
</div>