<% provide(:title, 'Upload new problem') %>

<div class="row ">
  <div class="col-md-8 offset-md-2" id="login-part">
    <div class="card border-success mb-3">
    <h2 id="NewProb">NEW PROBLEM</h2>
		<%= form_for(@problem, url: problems_path) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>

		<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name %>
		</div>

		<div class="form-group">
		<%= f.label :timelimit, "Time Limit" %>
		<%= f.number_field :timelimit %>
		</div>

		<div class="form-group">
		<%= f.label :memlimit, "Memory Limit" %>
		<%= f.number_field :memlimit %>
		</div>

		<div class="form-group">
		<%= f.label :file_name, "File" %>
		<%= f.file_field :file_name, multiple: true %>
		</div>

		<%= f.submit "Upload", class: "btn btn-success"%>
		<% end %>
    </div>
  </div>
</div>