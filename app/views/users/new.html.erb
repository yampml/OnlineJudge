<% provide(:title, 'Sign up') %>

<div class="row ">
  <div class="col-md-6 offset-md-3" id="login-part">
    <div class="card border-success mb-3">
      <h2 id="SignUp">SIGN UP</h2>

    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <i class="fa fa-user"></i>
        <%= f.label :name , class:"label-part"%>
        <%= f.text_field :name ,class:"form-control background"%>
      </div>

      <div class="form-group">
        <i class="fa fa-envelope"></i>
        <%= f.label :email , class:"label-part"%>
        <%= f.email_field :email ,class:"form-control background"%>
      </div>

      <div class="form-group">
        <i class="fa fa-lock"></i>
        <%= f.label :password , class:"label-part"%>
        <%= f.password_field :password ,class:"form-control background"%>
      </div>

      <div class="form-group">
        <i class="fa fa-lock"></i>
        <%= f.label :password_confirmation, "Confirmation" , class:"label-part"%>
        <%= f.password_field :password_confirmation ,class:"form-control background"%>
      </div> 

      <%= f.submit "Create my account",class: "btn btn-success"%>
    <% end %>
    </div>
  </div>
</div>