<% provide(:title, 'Sign up') %>

<div class="row ">
  <div class="col-md-6 offset-md-3" id="login-part">
    <div class="card border-success mb-3 card-form">
      <h2 id="SignUp">SIGN UP</h2>

    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        
        <%= f.label :name , "Name" ,class:"label-part"%>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-user"></i></span>
          </div>
        <%= f.text_field :name ,class:"form-control "%>
        </div>
      </div>

      <div class="form-group">
        
        <%= f.label :email , "Email" ,class:"label-part"%>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-envelope"></i></span>
          </div>
        <%= f.email_field :email ,class:"form-control "%>
        </div>
      </div>

      <div class="form-group">
        
        <%= f.label :password , "Password" ,class:"label-part"%>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-lock"></i></span>
          </div>
        <%= f.password_field :password ,class:"form-control "%>
        </div>
      </div>

      <div class="form-group">
        
        <%= f.label :password_confirmation, "Confirmation" , class:"label-part"%>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-lock"></i></span>
          </div>
        <%= f.password_field :password_confirmation ,class:"form-control "%>
        </div> 
      </div>

      <%= f.submit "Create my account",class: "btn btn-success"%>
    <% end %>
    </div>
  </div>
</div>