<% provide(:title, "Edit user") %>

<div class="row ">
  <div class="col-md-6 offset-md-3" id="login-part">
    <div class="card border-success mb-3 card-form">
      <h2 id="SignUp">Update your profile</h2>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <i class="fa fa-user"></i>
        <%= f.label :name , class:"label-part"%>
        <%= f.text_field :name ,class:"form-control "%>
      </div>

      <div class="form-group">
        <i class="fa fa-envelope"></i>
        <%= f.label :email , class:"label-part"%>
        <%= f.email_field :email ,class:"form-control "%>
      </div>

      <div class="form-group">
        <i class="fa fa-lock"></i>
        <%= f.label :password , class:"label-part"%>
        <%= f.password_field :password ,class:"form-control "%>
      </div>

      <div class="form-group">
        <i class="fa fa-lock"></i>
        <%= f.label :password_confirmation, "Confirmation" , class:"label-part"%>
        <%= f.password_field :password_confirmation ,class:"form-control "%>
      </div> 

        <div  id="collapseGravatar">
          <div class="card card-body" ">
          <%= gravatar_for @user%>
          <a href="http://gravatar.com/emails" target="_blank" class="btn btn-info">Change</a>

      
          </div>
        </div>

      <%= f.submit "Save changes",class: "btn btn-success", id:"ButtonChangeGravatar"%>
    <% end %>
    </div>


</div>